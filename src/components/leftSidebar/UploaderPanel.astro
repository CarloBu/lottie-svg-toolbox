---
import { Dropzone, DropzoneLoadingIndicator, DropzoneUploadIndicator } from "@/components/starwind/dropzone";
import DropzoneIcon from "@/assets/dropzoneSvg.svg";
import { Card, CardHeader, CardContent } from "../starwind/card";
---

<Card collapsible={true} defaultCollapsed={false} cardId='uploader-panel' class='select-none'>
	<CardHeader showToggle={true}>
		<span class='text-sm'>Upload File</span>
	</CardHeader>
	<CardContent collapsible={true}>
		<Dropzone accept='.json,application/json,.svg,image/svg+xml,.lottie' multiple={false} name='lottie-file' id='dz' class='bg-transparent border-card'>
			<DropzoneUploadIndicator>
				<div class='flex flex-col items-center justify-center py-8'>
					<DropzoneIcon class='w-12 h-12 mb-2 text-muted-foreground' />
					<span class='text-sm'>Drag & drop your .json or .lottie file</span>
					<span class='text-sm text-muted-foreground'>or click to browse</span>
				</div>
			</DropzoneUploadIndicator>
			<DropzoneLoadingIndicator />
		</Dropzone>
	</CardContent>
</Card>
